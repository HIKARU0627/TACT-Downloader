{
  "manifest_version": 3,
  "name": "TACTリソース再帰ダウンローダー",
  "version": "2.5",
  "description": "TACT（Sakai）の授業資料をフォルダ構造を保って一括ダウンロードします。",
  "permissions": [
    "downloads",
    "scripting",
    "tabs",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": ["https://tact.ac.thers.ac.jp/*"],
  "background": {
    "service_worker": "downloader.js"
  },
  "action": {
    "default_title": "TACTダウンローダー"
  },
  "icons": {
    "48": "icon.png"
  }
}
